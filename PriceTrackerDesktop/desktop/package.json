{
  "name": "price-tracker-desktop",
  "version": "1.0.0",
  "private": true,
  "main": "main.js",
  "scripts": {
    "dev": "concurrently -k -r \"npm:dev-backend\" \"npm:dev-frontend\" \"npm:dev-electron\"",

    "dev-backend": "npm --prefix \"C:/Users/HP/scraper2/price-tracker\" run dev",
    "dev-frontend": "npm --prefix \"C:/Users/HP/scraper2/PriceTrackerWeb\" run dev",

    "dev-electron": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER=1 BACKEND_PORT=3001 ELECTRON_APP=1 electron .",

    "build": "npm run build-frontend && npm run build-backend && npm run dist",

    "build-frontend": "cross-env VITE_API_BASE=http://127.0.0.1:3001 npm --prefix \"C:/Users/HP/scraper2/PriceTrackerWeb\" run build",
    "build-backend": "npm --prefix \"C:/Users/HP/scraper2/price-tracker\" run build:be",

    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.yourcompany.pricetracker",
    "productName": "Price Tracker",
    "asar": true,
    "files": ["main.js"],
    "extraResources": [
  { "from": "C:/Users/HP/scraper2/price-tracker/dist", "to": "backend-dist" },
  { "from": "C:/Users/HP/scraper2/price-tracker/node_modules", "to": "backend-dist/node_modules" },
  { "from": "C:/Users/HP/scraper2/price-tracker/.env", "to": ".env" },
  { "from": "C:/Users/HP/scraper2/PriceTrackerWeb/dist", "to": "frontend-dist" }
],
    "win": { "target": "nsis", "icon": "icon.ico" }
  },
  "dependencies": {
    "concurrently": "^9.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.5",
    "wait-on": "^7.2.0"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.13.3"
  }
}
